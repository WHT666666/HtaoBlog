{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@components/*": ["./.vitepress/theme/*"]
    }
  },
  "include": [".vitepress/**/*.ts", ".vitepress/**/*.vue", ".vitepress/**/*"],
  "exclude": ["node_modules"]
}
